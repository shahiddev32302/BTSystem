@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<!-- Header -->
<header class="main-header">
    <div class="header-container">
        <div class="brand">
            <div class="brand-icon">
                <i class="fas fa-bus"></i>
            </div>
            <div class="brand-text">
                <h1>OmniBus</h1>
                <p>LIVE CAMPUS TRANSIT</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn-icon" id="darkModeToggle">
                <i class="fas fa-moon"></i>
            </button>
            <div class="user-profile" onclick="window.location.href='profile.html';" style="cursor: pointer;">
                <img src="https://ui-avatars.com/api/?name=John+Smith&background=random" alt="Profile"
                     class="avatar">
                <span class="username">John Smith</span>
            </div>
        </div>
    </div>
</header>

<div class="dashboard-container">

    <div class="dashboard-grid">
        <!-- Left Column -->
        <div class="col-left">

            <!-- Bus Status Card -->
            <div class="card status-card">
                <div class="card-header-custom">
                    <div class="status-badge">
                        <span class="pulse"></span> Live Status
                    </div>
                </div>

                <div class="bus-identity">
                    <h2>BUS 101 <span class="bus-type">Express</span></h2>
                    <div class="test-class">
                        <p class="driver-info"><i class="fas fa-user"></i> Driver: Michael Ross</p>
                    </div>
                </div>

                <div class="status-metrics-row">
                    <div class="metric-box">
                        <label>PICKUP STOP</label>
                        <div class="value">
                            <i class="fas fa-map-marker-alt text-primary"></i> Main Gate
                        </div>
                    </div>
                    <div class="metric-box">
                        <label>PICKUP TIME</label>
                        <div class="value">
                            <i class="far fa-clock text-primary"></i> 08:30 AM
                        </div>
                    </div>
                    <div class="metric-box">
                        <label>ARRIVAL ETA</label>
                        <div class="value">
                            <i class="fas fa-hourglass-half text-primary"></i> 08:45 AM
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Schedule -->
            <div class="section fw-section">
                <div class="section-header">
                    <h3>Today's Schedule</h3>
                    <a href="#" class="view-all">View All</a>
                </div>
                <div class="schedule-list">
                    <div class="schedule-item completed">
                        <div class="time">07:00 AM</div>
                        <div class="details">
                            <h4>Morning Route</h4>
                            <p>Library to Science Hall</p>
                        </div>
                        <div class="status">
                            <i class="fas fa-check-circle text-success"></i>
                        </div>
                    </div>

                    <div class="schedule-item active">
                        <div class="time text-primary">08:30 AM</div>
                        <div class="details">
                            <h4>Main Campus Route <span class="badge-active">ACTIVE</span></h4>
                            <p>Main Gate to Engineering Block</p>
                        </div>
                    </div>

                    <div class="schedule-item upcoming">
                        <div class="time">02:00 PM</div>
                        <div class="details">
                            <h4>Afternoon Route</h4>
                            <p>Engineering Block to Library</p>
                        </div>
                        <div class="status">
                            <i class="far fa-clock text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Favorite Stops -->
            <div class="section fw-section">
                <div class="section-header">
                    <h3>Favorite Stops</h3>
                </div>
                <div class="favorites-grid">
                    <div class="favorite-card">
                        <div class="fav-icon">
                            <i class="fas fa-map-pin"></i>
                        </div>
                        <div class="fav-info">
                            <h4>Main Gate</h4>
                            <p><i class="fas fa-clock"></i> Next in 5 mins</p>
                        </div>
                        <button class="btn-like active"><i class="fas fa-heart"></i></button>
                        <span class="badge-platform">PLATFORM A</span>
                    </div>

                    <div class="favorite-card">
                        <div class="fav-icon orange">
                            <i class="fas fa-map-pin"></i>
                        </div>
                        <div class="fav-info">
                            <h4>Library Building</h4>
                            <p><i class="fas fa-clock"></i> Next in 12 mins</p>
                        </div>
                        <button class="btn-like active"><i class="fas fa-heart"></i></button>
                        <span class="badge-stand">STAND 3</span>
                    </div>
                </div>
            </div>

        </div>

        <!-- Right Column -->
        <div class="col-right">

            <!-- Countdown Card -->
            <div class="card countdown-card">
                <div class="countdown-content">
                    <label>ARRIVING IN</label>
                    <div class="timer">
                        <span class="time-part">04</span>
                        <span class="colon">:</span>
                        <span class="time-part">12</span>
                    </div>
                    <div class="timer-labels">
                        <span>MM</span>
                        <span>SS</span>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="section">
                <div class="section-header">
                    <h3>Quick Actions</h3>
                </div>
                <div class="actions-grid">
                    <button class="action-btn">
                        <div class="icon-circle text-primary bg-blue-light">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <span>Report Delay</span>
                    </button>
                    <button class="action-btn">
                        <div class="icon-circle text-primary bg-blue-light">
                            <i class="fas fa-headset"></i>
                        </div>
                        <span>Contact Admin</span>
                    </button>
                    <button class="action-btn">
                        <div class="icon-circle text-primary bg-blue-light">
                            <i class="fas fa-info"></i>
                        </div>
                        <span>Bus Details</span>
                    </button>
                    <button class="action-btn" id="openSendMessage" data-bs-toggle="modal"
                            data-bs-target="#sendMessageModal">
                        <div class="icon-circle text-primary bg-blue-light">
                            <i class="fas fa-paper-plane"></i>
                        </div>
                        <span>Send Message</span>
                    </button>
                </div>
            </div>

            <!-- Live Map -->
            <div class="section">
                <div class="section-header">
                    <h3>Live Map</h3>
                    <button class="btn-expand"><i class="fas fa-expand"></i></button>
                </div>
                <div class="map-card">
                    <div class="map-placeholder">
                        <!-- Simple Map SVG representation -->
                        <svg viewBox="0 0 400 300" width="100%" height="100%">
                            <rect width="400" height="300" fill="#E5E7EB" />
                            <path d="M50,150 Q200,50 350,150" stroke="#9CA3AF" stroke-width="4" fill="none" />
                            <path d="M100,0 V300 M200,0 V300 M300,0 V300" stroke="#FFFFFF" stroke-width="2" />
                            <path d="M0,100 H400 M0,200 H400" stroke="#FFFFFF" stroke-width="2" />
                            <circle cx="200" cy="110" r="15" fill="#3B82F6" fill-opacity="0.2" />
                            <circle cx="200" cy="110" r="8" fill="#3B82F6" stroke="white" stroke-width="2" />
                        </svg>
                    </div>
                    <div class="map-overlay">
                        <div class="stop-dot"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Service Update -->
    <div class="service-update">
        <div class="update-icon">
            <i class="fas fa-info"></i>
        </div>
        <div class="update-content">
            <strong>Service Update</strong>
            <p>Route 3 will be delayed by 5-10 minutes due to heavy traffic on Main Street. Plan accordingly.</p>
        </div>
        <button class="btn-close-update"><i class="fas fa-times"></i></button>
    </div>

</div>

<!-- Toast Container -->
<div id="toastContainer"></div>

<!-- Send Message Modal -->
<div class="modal fade" id="sendMessageModal" tabindex="-1" aria-labelledby="sendMessageModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sendMessageModalLabel">Send Message to Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="sendMessageForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">To</label>
                        <select class="form-select" id="messageTo">
                            <option value="admin@university.edu">System Admin (admin@university.edu)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control" id="messageSubject"
                               placeholder="Subject (optional)">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" id="messageBody" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="sendMessageBtn">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Send Message modal handling (student dashboard)
        document.addEventListener('DOMContentLoaded', function () {
            const sendForm = document.getElementById('sendMessageForm');
            const messageBody = document.getElementById('messageBody');

            if (sendForm) {
                sendForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    const to = document.getElementById('messageTo').value;
                    const subject = document.getElementById('messageSubject').value;
                    const body = messageBody.value.trim();
                    if (!body) {
                        messageBody.classList.add('is-invalid');
                        return;
                    }
                    // Demo: close modal and show a toast
                    const modalEl = document.getElementById('sendMessageModal');
                    const modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                    modal.hide();

                    const toastContainer = document.getElementById('toastContainer');
                    const toastId = 'toast-' + Date.now();
                    const toastHtml = `
                                    <div id="${toastId}" class="toast align-items-center text-bg-primary border-0 show" role="alert" aria-live="assertive" aria-atomic="true" style="position: relative; margin-bottom:8px;">
                                        <div class="d-flex">
                                            <div class="toast-body">Message sent to ${to}</div>
                                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                        </div>
                                    </div>`;
                    toastContainer.insertAdjacentHTML('beforeend', toastHtml);
                    setTimeout(() => {
                        const t = document.getElementById(toastId);
                        if (t) t.remove();
                    }, 4000);

                    sendForm.reset();
                });
            }

            if (messageBody) {
                messageBody.addEventListener('input', function () {
                    if (this.value.trim()) this.classList.remove('is-invalid');
                });
            }
        });
    </script>
    <script>
        // Countdown Logic
        const targetTime = new Date();
        targetTime.setMinutes(targetTime.getMinutes() + 4);
        targetTime.setSeconds(targetTime.getSeconds() + 12);

        function updateTimer() {
            const now = new Date();
            const diff = targetTime - now;

            if (diff <= 0) return;

            const mins = Math.floor((diff / 1000 / 60) % 60);
            const secs = Math.floor((diff / 1000) % 60);

            const parts = document.querySelectorAll('.timer .time-part');
            if (parts.length >= 2) {
                parts[0].textContent = String(mins).padStart(2, '0');
                parts[1].textContent = String(secs).padStart(2, '0');
            }
        }

        setInterval(updateTimer, 1000);
        updateTimer();
    </script>
}
