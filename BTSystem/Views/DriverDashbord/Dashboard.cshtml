@{
    ViewData["Title"] = "Driver Dashboard";
    Layout = "~/Views/Shared/_LayoutDriver.cshtml";
}
<header class="main-header">
    <div class="header-container">
        <div class="header-info">
            <h1>Driver Dashboard</h1>
            <p>Trip Management & Real-time Tracking</p>
        </div>
        <div class="header-actions">
            <button class="btn-icon" id="darkModeToggle">
                <i class="fas fa-moon"></i>
            </button>
            <div class="user-profile" onclick="window.location.href='profile.html';" style="cursor: pointer;">
                <span class="username">Capt. Smith</span>
                <div class="avatar">
                    <i class="fas fa-user"></i>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="dashboard-container">
    <div class="dashboard-grid">
        <!-- Left Column -->
        <div class="col-left">
            <!-- Current Trip Card -->
            <div class="card trip-card">
                <div class="card-header-inner">
                    <div class="title-group">
                        <h2>Current Trip</h2>
                        <p>North Campus Loop • Route #402</p>
                    </div>
                    <div class="status-badge">
                        <span class="pulse"></span> IN PROGRESS
                    </div>
                </div>

                <div class="metrics-grid">
                    <div class="metric-tile">
                        <div class="icon-box orange">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        <div class="metric-info">
                            <label>SPEED</label>
                            <span class="value">42 <span>km/h</span></span>
                        </div>
                    </div>
                    <div class="metric-tile">
                        <div class="icon-box yellow">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="metric-info">
                            <label>DISTANCE</label>
                            <span class="value">8.5 <span>km</span></span>
                        </div>
                    </div>
                    <div class="metric-tile">
                        <div class="icon-box blue">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="metric-info">
                            <label>CAPACITY</label>
                            <span class="value">42<span>/55</span></span>
                        </div>
                    </div>
                    <div class="metric-tile">
                        <div class="icon-box gold">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="metric-info">
                            <label>DURATION</label>
                            <span class="value">23 <span>min</span></span>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <button class="btn-start"><i class="fas fa-caret-right"></i> Start Trip</button>
                    <button class="btn-end"><i class="fas fa-square"></i> End Trip</button>
                    <button class="btn-pause"><i class="fas fa-pause"></i> Pause</button>
                </div>
            </div>

            <!-- Next Stop Card -->
            <div class="card next-stop-card">
                <div class="next-stop-header">
                    <div class="location-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="next-stop-info">
                        <label>NEXT STOP</label>
                        <h3>Library Building</h3>
                        <p>Central Campus, Building A</p>
                    </div>
                </div>
                <div class="next-stop-metrics">
                    <div class="sub-metric">
                        <label>ETA</label>
                        <span class="value">3 minutes</span>
                    </div>
                    <div class="sub-metric">
                        <label>DISTANCE</label>
                        <span class="value">1.2 km</span>
                    </div>
                </div>
                <div class="passenger-alert">
                    <i class="fas fa-user-friends"></i>
                    <span>4 students waiting for pickup</span>
                </div>
            </div>

            <!-- Live Map -->
            <div class="section">
                <div class="section-header">
                    <h3>Live Map</h3>
                    <button class="btn-expand"><i class="fas fa-expand"></i></button>
                </div>
                <div class="map-card">
                    <div class="map-placeholder">
                        <!-- Simple Map SVG representation -->
                        <svg viewBox="0 0 400 300" width="100%" height="100%">
                            <rect width="400" height="300" />
                            <path d="M50,150 Q200,50 350,150" stroke="#9CA3AF" stroke-width="4" fill="none" />
                            <path d="M100,0 V300 M200,0 V300 M300,0 V300" stroke="#FFFFFF" stroke-width="2" />
                            <path d="M0,100 H400 M0,200 H400" stroke="#FFFFFF" stroke-width="2" />
                            <circle cx="200" cy="110" r="15" fill="#3B82F6" fill-opacity="0.2" />
                            <circle cx="200" cy="110" r="8" fill="#3B82F6" stroke="white" stroke-width="2" />
                        </svg>
                    </div>
                    <div class="map-overlay">
                        <div class="stop-dot"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-right">
            <!-- Route Overview -->
            <div class="card route-card">
                <h3>Route Overview</h3>
                <div class="route-timeline">
                    <div class="timeline-item completed">
                        <div class="marker"><i class="fas fa-check"></i></div>
                        <div class="content">
                            <h4>Main Gate</h4>
                            <p>7:50 AM</p>
                        </div>
                    </div>
                    <div class="timeline-item active">
                        <div class="marker"><i class="fas fa-bus"></i></div>
                        <div class="content">
                            <h4>North Parking Lot</h4>
                            <p>Arrived • 8:10 AM</p>
                        </div>
                        <div class="active-dot"></div>
                    </div>
                    <div class="timeline-item pending">
                        <div class="marker"><i class="far fa-circle"></i></div>
                        <div class="content">
                            <h4>Library Building</h4>
                            <p>8:33 AM (est.)</p>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </div>
                    <div class="timeline-item pending">
                        <div class="marker"><i class="far fa-circle"></i></div>
                        <div class="content">
                            <h4>Science Hall</h4>
                            <p>8:50 AM (est.)</p>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </div>
                    <div class="timeline-item pending">
                        <div class="marker"><i class="far fa-circle"></i></div>
                        <div class="content">
                            <h4>Engineering Block</h4>
                            <p>9:10 AM (est.)</p>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </div>
                </div>
            </div>

            <!-- Emergency SOS -->
            <button class="btn-sos">
                <i class="fas fa-exclamation-triangle"></i> EMERGENCY SOS
            </button>

            <!-- Quick Report Issue -->
            <div class="card issues-card">
                <label>QUICK REPORT ISSUE</label>
                <div class="issues-grid">
                    <button class="issue-item">
                        <i class="fas fa-wrench" style="color: #F59E0B;"></i>
                        <span>Mechanical</span>
                    </button>
                    <button class="issue-item">
                        <i class="fas fa-traffic-light" style="color: #3B82F6;"></i>
                        <span>Traffic Delay</span>
                    </button>
                    <button class="issue-item">
                        <i class="fas fa-user-friends" style="color: #8B5CF6;"></i>
                        <span>Passenger</span>
                    </button>
                    <button class="issue-item" id="openSendMessage" data-bs-toggle="modal"
                            data-bs-target="#sendMessageModal">
                        <i class="fas fa-paper-plane" style="color: #9CA3AF;"></i>
                        <span>Send Message</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="toastContainer"></div>

<!-- Send Message Modal -->
<div class="modal fade" id="sendMessageModal" tabindex="-1" aria-labelledby="sendMessageModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sendMessageModalLabel">Send Message to Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="sendMessageForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">To</label>
                        <select class="form-select" id="messageTo">
                            <option value="admin@university.edu">System Admin (admin@university.edu)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control" id="messageSubject"
                               placeholder="Subject (optional)">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" id="messageBody" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="sendMessageBtn">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Send Message modal handling
        document.addEventListener('DOMContentLoaded', function () {
            const sendForm = document.getElementById('sendMessageForm');
            const messageBody = document.getElementById('messageBody');
            const sendBtn = document.getElementById('sendMessageBtn');

            if (sendForm) {
                sendForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    const to = document.getElementById('messageTo').value;
                    const subject = document.getElementById('messageSubject').value;
                    const body = messageBody.value.trim();
                    if (!body) {
                        messageBody.classList.add('is-invalid');
                        return;
                    }
                    // Demo: close modal and show a toast
                    const modalEl = document.getElementById('sendMessageModal');
                    const modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                    modal.hide();

                    // Create toast
                    const toastContainer = document.getElementById('toastContainer');
                    const toastId = 'toast-' + Date.now();
                    const toastHtml = `
                                    <div id="${toastId}" class="toast align-items-center text-bg-primary border-0 show" role="alert" aria-live="assertive" aria-atomic="true" style="position: relative; margin-bottom:8px;">
                                        <div class="d-flex">
                                            <div class="toast-body">Message sent to ${to}</div>
                                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                                        </div>
                                    </div>`;
                    toastContainer.insertAdjacentHTML('beforeend', toastHtml);
                    // Auto-remove after 4s
                    setTimeout(() => {
                        const t = document.getElementById(toastId);
                        if (t) t.remove();
                    }, 4000);

                    // reset form
                    sendForm.reset();
                });
            }

            // Remove invalid class on input
            if (messageBody) {
                messageBody.addEventListener('input', function () {
                    if (this.value.trim()) this.classList.remove('is-invalid');
                });
            }
        });
    </script>
}
