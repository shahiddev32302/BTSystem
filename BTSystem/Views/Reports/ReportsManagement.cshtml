@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml"; // agar common layout use ho raha ho
}

<!-- Content Area -->
<div class="content-area" id="contentArea">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-2">Reports & Analytics</h2>
            <p class="text-muted">View detailed analytics and reports</p>
        </div>
        <button class="btn btn-primary">
            <i class="fas fa-download me-2"></i>Export Report
        </button>
    </div>

    <!-- Key Metrics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted small">Total Trips</p>
                    <h3 class="mb-0">1,246</h3>
                    <p class="text-success small mt-2"><i class="fas fa-arrow-up"></i> 12% increase</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted small">Total Passengers</p>
                    <h3 class="mb-0">45,320</h3>
                    <p class="text-success small mt-2"><i class="fas fa-arrow-up"></i> 8% increase</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted small">On-Time Rate</p>
                    <h3 class="mb-0">94.2%</h3>
                    <p class="text-success small mt-2"><i class="fas fa-arrow-up"></i> 2.1% increase</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted small">Fuel Efficiency</p>
                    <h3 class="mb-0">6.8 km/l</h3>
                    <p class="text-warning small mt-2"><i class="fas fa-arrow-down"></i> 1.2% decrease</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Tabs -->
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs mb-0" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#tripAnalysis">
                        <i class="fas fa-chart-line me-2"></i>Trip Analysis
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#driverPerformance">
                        <i class="fas fa-user-tie me-2"></i>Driver Performance
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#incidents">
                        <i class="fas fa-warning me-2"></i>Incidents
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#maintenance">
                        <i class="fas fa-tools me-2"></i>Maintenance
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div id="tripAnalysis" class="tab-pane fade show active">
                    <h5 class="mb-3">Trip Analysis Report</h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Route</th>
                                <th>Trips</th>
                                <th>Passengers</th>
                                <th>Avg Duration</th>
                                <th>On-Time %</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Dec 31, 2024</td>
                                <td>Route 1 - Campus Loop</td>
                                <td>12</td>
                                <td>450</td>
                                <td>25 mins</td>
                                <td><span class="badge bg-success">96%</span></td>
                            </tr>
                            <tr>
                                <td>Dec 31, 2024</td>
                                <td>Route 2 - Hostel Route</td>
                                <td>10</td>
                                <td>380</td>
                                <td>18 mins</td>
                                <td><span class="badge bg-success">92%</span></td>
                            </tr>
                            <tr>
                                <td>Dec 30, 2024</td>
                                <td>Route 3 - City Express</td>
                                <td>8</td>
                                <td>290</td>
                                <td>35 mins</td>
                                <td><span class="badge bg-warning">85%</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div id="driverPerformance" class="tab-pane fade">
                    <h5 class="mb-3">Driver Performance Report</h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Driver Name</th>
                                <th>Trips Completed</th>
                                <th>On-Time Rate</th>
                                <th>Safety Rating</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>156</td>
                                <td><span class="badge bg-success">98%</span></td>
                                <td>★★★★★ 4.8</td>
                                <td><span class="badge bg-success">Active</span></td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>142</td>
                                <td><span class="badge bg-success">95%</span></td>
                                <td>★★★★ 4.5</td>
                                <td><span class="badge bg-success">Active</span></td>
                            </tr>
                            <tr>
                                <td>Mike Johnson</td>
                                <td>128</td>
                                <td><span class="badge bg-warning">88%</span></td>
                                <td>★★★ 4.2</td>
                                <td><span class="badge bg-warning">On Leave</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div id="incidents" class="tab-pane fade">
                    <h5 class="mb-3">Incident Report</h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Bus</th>
                                <th>Incident Type</th>
                                <th>Severity</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Dec 28, 2024</td>
                                <td>BUS-045</td>
                                <td>Engine Failure</td>
                                <td><span class="badge bg-danger">Critical</span></td>
                                <td><span class="badge bg-success">Resolved</span></td>
                            </tr>
                            <tr>
                                <td>Dec 27, 2024</td>
                                <td>BUS-032</td>
                                <td>Brake Issue</td>
                                <td><span class="badge bg-warning">High</span></td>
                                <td><span class="badge bg-success">Resolved</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div id="maintenance" class="tab-pane fade">
                    <h5 class="mb-3">Maintenance Schedule</h5>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Bus</th>
                                <th>Service Type</th>
                                <th>Last Service</th>
                                <th>Next Service</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>BUS-101</td>
                                <td>Regular Maintenance</td>
                                <td>Nov 15, 2024</td>
                                <td>Jan 15, 2025</td>
                                <td><span class="badge bg-success">On Schedule</span></td>
                            </tr>
                            <tr>
                                <td>BUS-045</td>
                                <td>Major Repair</td>
                                <td>Oct 10, 2024</td>
                                <td>Dec 10, 2024</td>
                                <td><span class="badge bg-danger">Due Soon</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


