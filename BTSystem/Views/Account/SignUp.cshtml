@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="w-full min-h-screen flex items-center justify-center px-4 bg-bg-light dark:bg-bg-dark">

    <div class="w-full max-w-7xl h-[90vh] bg-white dark:bg-bg-dark rounded-2xl shadow-2xl overflow-hidden">

        <div class="flex h-full">

            <!-- LEFT PANEL -->
            <div class="hidden lg:flex w-5/12 bg-primary text-white relative p-10 flex-col justify-between">
                <div>
                    <div class="flex items-center gap-3 mb-6">
                        <span class="material-symbols-outlined text-3xl">location_on</span>
                        <h2 class="text-xl font-bold">OmniBus</h2>
                    </div>

                    <h1 class="text-4xl font-black leading-tight mb-4">
                        Commute Smarter,<br>Arrive Safer.
                    </h1>

                    <p class="text-white/80 text-base max-w-md">
                        Join thousands of users using real-time tracking for a smarter travel experience.
                    </p>

                    <div class="mt-8 space-y-4">
                        <div class="bg-white/10 rounded-xl p-4">
                            <p class="font-semibold">Live GPS Tracking</p>
                            <p class="text-sm text-white/70">Accurate location updates.</p>
                        </div>
                        <div class="bg-white/10 rounded-xl p-4">
                            <p class="font-semibold">Smart Monitoring</p>
                            <p class="text-sm text-white/70">Track vehicles with confidence.</p>
                        </div>
                    </div>
                </div>

                <p class="text-xs text-white/80">Trusted by 5,000+ users</p>

                <!-- Glow -->
                <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
                <div class="absolute top-1/2 -right-24 w-72 h-72 bg-white/5 rounded-full blur-3xl"></div>
            </div>

            <!-- RIGHT PANEL -->
            <div class="w-full lg:w-7/12 flex items-center justify-center px-8 py-12 bg-white dark:bg-bg-dark">

                <div class="w-full max-w-xl space-y-4">

                    <!-- Heading -->
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                            Create your account
                        </h2>
                        <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">
                            Please fill in your details to register
                        </p>
                    </div>

                    <!-- FORM -->
                    <form id="signupForm" class="grid grid-cols-2 gap-4">

                        <div>
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Full Name</label>
                            <input id="fullName" type="text" placeholder="John Doe"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div>
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Username</label>
                            <input id="username" type="text" placeholder="johndoe"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div class="col-span-2">
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Registration Number</label>
                            <input id="regNo" type="text" placeholder="REG-123456"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div>
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Email</label>
                            <input id="email" type="email" placeholder="user@email.com"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div>
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Phone</label>
                            <input id="phone" type="tel" placeholder="+92 300 1234567"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div class="col-span-2">
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Address</label>
                            <input id="address" type="text" placeholder="Street address"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div class="col-span-2">
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Password</label>
                            <input id="password" type="password" placeholder="••••••••"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div class="col-span-2">
                            <label class="text-sm font-semibold text-gray-700 dark:text-gray-300">Confirm Password</label>
                            <input id="confirmPassword" type="password" placeholder="••••••••"
                                   class="mt-1 w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-primary outline-none dark:bg-gray-900 dark:border-gray-700 dark:text-white text-sm">
                        </div>

                        <div class="col-span-2 pt-2">
                            <button id="signupBtn" type="button"
                                    class="w-full bg-primary hover:bg-primary/90 text-white font-bold py-3 rounded-lg shadow-lg transition flex items-center justify-center gap-2 text-lg">
                                Sign Up
                                <span class="material-symbols-outlined">arrow_forward</span>
                            </button>
                        </div>
                    </form>

                    <!-- Divider -->
                    <div class="flex items-center gap-3 pt-4">
                        <div class="flex-1 h-px bg-gray-200 dark:bg-gray-700"></div>
                        <span class="text-sm text-gray-400">or continue with</span>
                        <div class="flex-1 h-px bg-gray-200 dark:bg-gray-700"></div>
                    </div>

                    <!-- Social -->
                    <div class="grid grid-cols-2 gap-4">
                        <button class="flex items-center justify-center gap-3 border rounded-lg py-3 font-semibold hover:bg-gray-100 dark:hover:bg-gray-800">
                            <i class="fa-brands fa-google text-red-500"></i> Google
                        </button>
                        <button class="flex items-center justify-center gap-3 border rounded-lg py-3 font-semibold hover:bg-gray-100 dark:hover:bg-gray-800">
                            <i class="fa-brands fa-facebook text-blue-600"></i> Facebook
                        </button>
                    </div>

                    <!-- Login Link -->
                    <p class="text-center text-sm text-gray-500 dark:text-gray-400">
                        Already have an account?
                        <a href="@Url.Action("Login", "Account")" class="text-primary font-bold hover:underline">Log In</a>
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>

